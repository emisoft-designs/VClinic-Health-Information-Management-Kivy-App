<LoginScreen>:
    username: username
    password: password

    RelativeLayout:
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        Image:
            source: 'static/images/img_4.jpg'
            fit_mode: 'cover'

        BoxLayout:
            orientation: 'vertical'
            canvas.before:
                Color:
                    rgba: (255, 255, 255, 0.5)
                Rectangle:
                    pos: self.pos
                    size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: 5
        spacing: 10
        elevation: 10
        size_hint: (0.25, 0.65)
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        canvas.before:
            Color:
                rgba: 0, 0, 0, 0.65
            BoxShadow:
                pos: self.pos
                size: self.size
                offset: 0, -10
                blur_radius: 25
                spread_radius: -10, -10
                border_radius: 10, 10, 10, 10

        BoxLayout:
            orientation: 'vertical'
            padding: 5
            spacing: 10
            size_hint_y: None
            height: 500

            canvas.before:
                Color:
                    rgba: (0, 0.5, 0.7, 1)
                Rectangle:
                    pos: self.pos
                    size: self.size

            Image:
                source: 'static/images/login_icon.png'
                fit_mode: 'fill'
                size_hint_y: None
                height: 300
            GridLayout:
                cols: 1
                spacing: 10
                size_hint_y: None
                height: 100

                TextInput:
                    id: username
                    hint_text: 'Username'
                    size_hint_y: None
                    height: 40

                TextInput:
                    id: password
                    hint_text: 'Password'
                    password: True
                    size_hint_y: None
                    height: 40

            BoxLayout:
                orientation: 'horizontal'

                GridLayout:
                    cols: 2
                    spacing: 10
                    height: 50

                    Button:
                        text: 'Login'
                        height: 40
                        size_hint_y: None
                        on_press:
                            root.login()
                            app.root.transition.direction = 'left'
                            app.root.current = 'home' if root.successful else 'login'
                    Button:
                        text: 'Close'
                        height: 40
                        size_hint_y: None
                        on_press: 
                            app.stop()
                
            Label:
                id: login_info
                text: ""
                size_hint_y: None
                height: 15
                padding_y:10
                