<ObstetricsDashboardScreen>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: (0, 0.5, 0.7, 1)
            Rectangle:
                pos: self.pos
                size: self.size
        GridLayout:
            cols: 5
            size_hint_y: 0.1
            spacing: 1
            
            
            Button:
                text: "Back"
                on_press: 
                    app.root.transition.direction = 'right'
                    app.root.current = 'home'
            Button:
                text: "Create New"
                on_press: root.pop_create_new_record()
            Button:
                text: "Patient Obstetrics Records"
                on_press: 
                    app.root.transition.direction = 'left'
                    app.root.current = 'patient_obstetrics_list'
            Button:
                text: "Notifications"
                on_press: app.root.current = 'notifications'
            Button:
                text: "Logout"
                on_press: 
                    root.logout()
                    app.root.transition.direction = 'right'
                    app.root.current = 'login'


        # Main Content
        BoxLayout:
            orientation: 'vertical' 
            height: self.minimum_height

            RelativeLayout:
                size_hint: (1, 3)
                Image:
                    source: 'static/images/img_5.jpg' 
                    fit_mode: 'cover'
                    size: 1, 1
                
                BoxLayout:
                    size_hint_x: 0.8
                    size_hint_y: None
                    pos_hint: {"center_x":0.5, "center_y":0.5}
                    height: 50
                    row_default_height: 50

                    TextInput:
                        hint_text: "Search for patient records"
                        size_hint_x: 0.8
                        size_hint_y: None
                        font_size: 16 
                        height: 50
                        multiline: False
                        padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                    Button:
                        text: "Search"
                        size_hint_x: 0.2
                        size_hint_y: None
                        height: 50

                        
            # Footer
            BoxLayout:
                size_hint_y: None
                height: 50
                canvas.before:
                    Color:
                        rgba: (0.2, 0.6, 0.8, 1)
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Label:
                    text: 'Â© 2024 Hospital Management System. All rights reserved.'
                    color: (1, 1, 1, 1)
                    size_hint_y: None
                    height: 50
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
