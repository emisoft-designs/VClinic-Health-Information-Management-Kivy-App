<RegisterPatientScreen>: 
    RelativeLayout:
        pos_hint: {'center_x': 0.5,'center_y': 0.5}

        Image:
            source: 'static\images\img_4.jpg'
            fit_mode: 'cover' 

    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: (255, 255, 255, 0.5)
            Rectangle:
                pos: self.pos
                size: self.size

        # Header Menu Bar
        BoxLayout:
            id: menu_bar
            size_hint_y: None
            height: 50

            canvas.before:
                Color:
                    rgba: (1, 1, 1, 1)
                Rectangle:
                    pos: self.pos
                    size: self.size

            GridLayout:
                cols: 4 
                height: 50
                id: menu_list

                Button:
                    text: "Back"
                    background_normal: ''
                    background_color: (0, 0.5, 0.7, 1)
                    on_press: 
                        app.root.transition.direction = 'right'
                        app.root.current = 'home'
                
                Button:
                    text: 'Services'
                    background_normal: ''
                    background_color: (0, 0.5, 0.7, 1)
                    on_press: 
                        app.root.transition.direction = 'left'
                        app.root.current = 'services'

                Button:
                    text: 'Notifications'
                    background_normal: ''
                    background_color: (0, 0.5, 0.7, 1)
                    on_press: 
                        app.root.transition.direction = 'left'
                        app.root.current = 'notifications'

                Button:
                    text: "Logout"
                    background_normal: ''
                    background_color: (0, 0.5, 0.7, 1)
                    on_press: 
                        root.logout()
                        app.root.transition.direction = 'right'
                        app.root.current = 'login'



        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            scroll_type: ['bars', 'content']
            bar_width: 10  # Set the desired width of the scrollbar
            bar_color: 0, 0, 0, 1  # Optional: Set the color of the scrollbar 
            bar_inactive_color: 0, 0, 0, 0.6  # Optional: Set the inactive color of the scrollbar

            BoxLayout:
                orientation: 'vertical' 
                size_hint_y: None 
                height: 1000
                padding: [0, 10]


                BoxLayout:
                    orientation: 'vertical'
                    size_hint: (None, None)
                    size: (900, 1000)
                    elevation: 10
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    canvas.before:
                        Color:
                            rgba: (0, 0.5, 0.7, 0.7)
                        Rectangle:
                            pos: self.pos
                            size: self.size

                    BoxLayout:
                        orientation: 'vertical'
                        padding: 10
                        spacing: 20
                        size_hint_y: 1

                        Label:
                            text: "Patient Register"
                            font_size: 48
                            color: (1, 1, 1, 1) 
                            height: 50

                        GridLayout:
                            cols: 3
                            spacing: 10
                            size_hint_y: None
                            height: 50
                            row_default_height: 50

                            TextInput:
                                id: firstname
                                hint_text: 'First Name'
                                font_size: 16
                                multiline: False
                                # top, bottom
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                            TextInput:
                                id: middlename
                                hint_text: 'Middle Name'
                                font_size: 16 
                                multiline: False
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                            TextInput:
                                id: surname
                                hint_text: 'Last Name'
                                font_size: 16 
                                multiline: False
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        GridLayout:
                            cols: 3
                            spacing: 10
                            size_hint_y: None
                            height: 50
                            row_default_height: 50

                            TextInput:
                                id: occupation
                                hint_text: 'Occupation'
                                font_size: 16 
                                multiline: False
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                            TextInput:
                                id: phone_number
                                hint_text: 'Phone Number'
                                font_size: 16 
                                multiline: False
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                            Spinner:
                                id: marital_status
                                text: 'Marital Status'
                                values: ['Married', 'Single', 'Divorced']
                                font_size: 16
                                valign: 'middle'

                        GridLayout:
                            cols: 3
                            spacing: 10
                            size_hint_y: None
                            height: 50
                            row_default_height: 50

                            TextInput:
                                id: age
                                hint_text: 'Age'
                                font_size: 16 
                                multiline: False
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                            TextInput:
                                id: height
                                hint_text: 'Height (ft/m/inch)'
                                font_size: 16 
                                multiline: False
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                            TextInput:
                                id: weight
                                hint_text: 'Weight (Kg)'
                                font_size: 16 
                                multiline: False
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        GridLayout:
                            cols: 3
                            spacing: 10
                            size_hint_y: None
                            height: 50
                            row_default_height: 50

                            TextInput:
                                id: house_number
                                hint_text: 'House Number'
                                font_size: 16 
                                multiline: False
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                            TextInput:
                                id: street
                                hint_text: 'Street'
                                font_size: 16 
                                multiline: False
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                            TextInput:
                                id: landmark
                                hint_text: 'Landmark'
                                font_size: 16 
                                multiline: False
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        GridLayout:
                            cols: 3
                            spacing: 10
                            size_hint_y: None
                            height: 50
                            row_default_height: 50

                            TextInput:
                                id: city
                                hint_text: 'City'
                                font_size: 16 
                                multiline: False
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                            TextInput:
                                id: state
                                hint_text: 'State'
                                font_size: 16 
                                multiline: False
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                            TextInput:
                                id: country
                                hint_text: 'Country'
                                font_size: 16 
                                multiline: False
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        Label:
                            text: "Next of Kin:"
                            font_size: 18
                            color: (1, 1, 1, 1)
                            size_hint_y: None
                            halign: 'left'
                            height: 20

                        GridLayout:
                            cols: 2
                            spacing: 10
                            size_hint_y: None
                            height: 50
                            row_default_height: 50

                            TextInput:
                                id: next_of_kin_first_name
                                hint_text: 'Next of Kin First Name'
                                font_size: 16 
                                multiline: False
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                            TextInput:
                                id: next_of_kin_last_name
                                hint_text: 'Next of Kin Last Name'
                                font_size: 16 
                                multiline: False
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        GridLayout:
                            cols: 2
                            spacing: 10
                            size_hint_y: None
                            height: 50
                            row_default_height: 50

                            Spinner:
                                id: next_of_kin_relationship
                                text: 'Relationship with Next of Kin'
                                values: ['Father', 'Mother', 'Sister', 'Brother', 'Other']
                                font_size: 16 
                            TextInput:
                                id: next_of_kin_phone_number
                                hint_text: 'Next of Kin Phone Number'
                                font_size: 16 
                                multiline: False
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        GridLayout:
                            cols: 1
                            spacing: 10
                            size_hint_y: None
                            height: 50
                            row_default_height: 50

                            TextInput:
                                id: next_of_kin_address1
                                hint_text: 'Next of Kin Address 1'
                                font_size: 16 
                                multiline: False
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        GridLayout:
                            cols: 1
                            spacing: 10
                            size_hint_y: None
                            height: 50
                            row_default_height: 50

                            TextInput:
                                id: next_of_kin_address2
                                hint_text: 'Next of Kin Address 2'
                                font_size: 16 
                                multiline: False
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        GridLayout:
                            cols: 1
                            spacing: 10
                            size_hint_y: 1.6
                            height: 150
                            row_default_height: 150

                            TextInput:
                                id: additional_details
                                hint_text: 'Additional Details'
                                font_size: 16
                                size_hint_y: 1.5
                                multiline: True 

                        GridLayout:
                            cols: 2
                            spacing: 10
                            size_hint_y: None
                            height: 50
                            row_default_height: 50

                            Button:
                                text: 'Register'
                                on_press: root.register_patient()
                            Button:
                                text: 'Back'
                                on_press: app.root.current = 'home'
                                    
        # Footer
        BoxLayout:
            size_hint_y: None
            height: 50
            canvas.before:
                Color:
                    rgba: (0.2, 0.6, 0.8, 1)
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text: '© 2024 Hospital Management System. All rights reserved.'
                color: (1, 1, 1, 1)
                size_hint_y: None
                height: 50
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
