<RegisterStaffScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        TextInput:
            id: username
            hint_text: 'Username'
        TextInput:
            id: email
            hint_text: 'Email'
        TextInput:
            id: password
            hint_text: 'Password'
            password: True
        TextInput:
            id: position
            hint_text: 'Position'
        
        Button:
            text: 'Register'
            on_press: root.register_staff()
        Button:
            text: 'Back'
            on_press: app.root.current = 'home'
